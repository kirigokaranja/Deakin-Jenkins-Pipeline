pipeline {

    agent any

    environment {
        DIRECTORY_PATH = '/var/www/html/deakin-uni/ui'
        TESTING_ENVIRONMENT = 'STAGING'
        PRODUCTION_ENVIRONMENT = 'SHARON'
    }

    stages {
        stage('Build'){
            steps {
                echo "Fetch the source code from the directory path: $DIRECTORY_PATH"
                echo "Compile the code and generate any necessary artifacts"
            }
            post {
                success {
                    mail to: "s223972975@deakin.edu.au",
                    subject: "Build Status email",
                    body: "Build was successful"
                }
            }
        }

        stage('Test'){
            steps {
                echo "Unit tests"
                echo "Integration tests"
            }
        }

        stage('Code Quality Check'){
            steps {
                echo "Check the quality of the code"
            }
        }

        stage('Deploy'){
            steps {
                echo "Deploy the application to testing environment: $TESTING_ENVIRONMENT"
            }
        }

        stage('Approval'){
            steps {
                sleep 10
            }
        }

        stage('Deploy to Production'){
            steps {
                echo "Deploy to production environment: $PRODUCTION_ENVIRONMENT"
            }
        }
    }
}